{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    "declaration": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": ["es2022", "dom"],
    "outDir": "dist",
    "baseUrl": "./",
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "types": ["jasmine", "node"]
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "strictTemplates": true,
    "enableResourceInlining": true,
    "compilationMode": "partial"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}